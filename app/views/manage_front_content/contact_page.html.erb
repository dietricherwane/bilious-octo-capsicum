<script type="text/javascript">
  var onloadCallback = function() {
    // Renders the HTML element with id 'adcaptcha1' as a reCAPTCHA widget.
    // The id of the reCAPTCHA widget is assigned to 'widgetId1'.
    grecaptcha.render('adcaptcha1', {
      'sitekey' : "<%= Recaptcha.configuration.public_key %>"
    });
    grecaptcha.render('adcaptcha2', {
      'sitekey' : "<%= Recaptcha.configuration.public_key %>"
    });
  };
</script>

<!-- Title area -->
<div class="titleArea">
    <div class="wrapper">
        <div class="pageTitle">
            <h5>Mise à jour de la page de contact du site</h5>
            <span>Remplissez les formulaires associés aux différentes sections de l'interface grand public.</span>
        </div>

        <div class="clear"></div>
    </div>
</div>

<div class="line"></div>

