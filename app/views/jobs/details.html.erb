<div class="main-page-title"><!-- start main page title -->
	<div class="container">
		<h3 class="job-detail-title">Détails de l'offre</h3>
		<div class="recent-job-detail">
			<div class="col-md-5 job-detail-desc">
				<h5><%= @offer.title %></h5>
				<p>Postée le <%= @offer.created_at.strftime("%d-%m-%Y") + " à " + @offer.created_at.strftime("%Hh %Mmn") %></p>
			</div>
			<div class="col-md-2 job-detail-name">
				<h6><%= @offer.company.name rescue "" %></h6>
			</div>
			<div class="col-md-2 job-detail-location">
				<h6><i class="fa fa-map-marker"></i><%= @offer.country.name %> | <%= @offer.city %></h6>
			</div>
			<div class="col-md-3">
				<div class="row">
					<div class="col-md-7 job-detail-type">
						<h6><i class="fa fa-user"></i> <%= @offer.contract_type.name %></h6>
					</div>
				</div>
			</div>
			<div class="clearfix"></div>
		</div>

		<div class="row  job-detail">
			<div class="col-md-6">
				<h6>Domaine d'activités</h6>
				<p>
					<%= @offer.activity_field.name %>
				</p>
				</br>
				<h6>Niveau d'études</h6>
				<p>
					<%= @offer.studies_level.name %>
				</p>
				</br>
				<h6>Années d'expérience</h6>
				<p>
					<%= @offer.min_years_of_experience %> - <%= @offer.max_years_of_experience %> an(s)
				</p>
				</br>
				<h6>Profil du candidat</h6>
				<p>
					<%= @offer.profile %>
				</p>
				</br>
				<h6>Nombre de places disponibles</h6>
				<p>
					<%= @offer.position_available %>
				</p>
			</div>
			<div class="col-md-6">
			  <h6>Date d'expiration de l'offre</h6>
				<p>
					<%= @offer.expiration_date.strftime("%d-%m-%Y") %>
				</p>
			  </br>
				<h6>Description du poste</h6>
				<p>
					<%= simple_format(@offer.description) %>
			</div>
		</div>
		<div class="spacer-1">&nbsp;</div>
	</div>
</div>
