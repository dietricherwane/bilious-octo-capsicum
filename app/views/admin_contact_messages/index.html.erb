<!-- Title area -->
<div class="titleArea">
    <div class="wrapper">
        <div class="pageTitle">
            <h5>Liste des messages</h5>
            <span>Prise en charge des actions liées aux messages transmis par les utilisateurs.</span>
        </div>

        <div class="clear"></div>
    </div>
</div>

<div class="line"></div>

<%#= render "admin_blogs/shared/sub_menu" %>

<div class="line"></div>

<!-- Main content wrapper -->
<div class="wrapper">
  <%= flash_messages! %>
<!-- Widgets -->
  <div class="widget">
    <div class="title"><img src="<%= asset_path 'icons/dark/full2.png' %>" alt="" class="titleIcon" /><h6>Liste des types de blogs</h6></div>
    <table cellpadding="0" cellspacing="0" border="0" class="display dTable taskWidget">
      <thead>
        <tr>
          <th>Nom</th>
          <th>Email</th>
          <th>Sujet</th>
          <th>Date</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <% unless @contact_forms.blank? %>
          <% @contact_forms.each do |contact_form| %>
            <tr class="gradeA">
              <td>
                <%= contact_form.name %>
              </td>
              <td>
                <%= contact_form.email %>
              </td>
              <td>
                <%= contact_form.subject %>
              </td>
              <td class = "customInfo">
                <span>
                  <strong>Créé le </strong> <%= contact_form.created_at.strftime("%d-%m-%Y") + " à " + contact_form.created_at.strftime("%Hh %Mmn") %>
                </span>
              </td>
              <td class = "actBtns">
                <a href="<%= admin_contact_message_details_path(contact_form.id) %>" class="tipS" original-title="Détails"><%= image_tag('icons/color/notebook.png', alt: '') %></a>
              </td>
            </tr>
          <% end %>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
<!-- End Main content wrapper -->
