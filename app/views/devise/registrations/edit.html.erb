<script src='https://www.google.com/recaptcha/api.js'></script>

<!-- Title area -->
<div class="titleArea">
    <div class="wrapper">
        <div class="pageTitle">
            <h5>Mise à jour du profil de <%= current_user.full_name %></h5>
            <span>Modifier les informations liées au compte.</span>
        </div>

        <div class="clear"></div>
    </div>
</div>

<div class="line"></div>

<%= render "devise/registrations/shared/sub_menu" %>

<div class="line"></div>

<!-- Main content wrapper -->
<div class="wrapper">

  <%= devise_error_messages! %>
  <%= flash_messages! %>
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put, class: 'form' }) do |f| %>
    <fieldset>
      <div class="widget">
        <div class="title">
          <img src="<%= asset_path 'icons/dark/users.png' %>" alt="" class="titleIcon" />
          <h6>Mettre à jour le profil</h6>
        </div>

        <div class="formRow">
          <%= image_tag current_user.avatar.url(:medium) rescue "" %>
          <div class="clear"></div>
        </div>

        <div class="formRow">
          <label><%= f.label :avatar %></label>
          <div class="formRight">
            <%= f.file_field :avatar, placeholder: "Veuillez entrer le nom", class: 'form-control' %>
          </div>
          <div class="clear"></div>
        </div>

        <div class="formRow">
          <label><%= f.label :first_name %></label>
          <div class="formRight">
            <%= f.text_field :first_name, placeholder: "Veuillez entrer le nom", class: 'form-control', autofocus: true %>
          </div>
          <div class="clear"></div>
        </div>

        <div class="formRow">
          <label><%= f.label :last_name %></label>
          <div class="formRight">
            <%= f.text_field :last_name, placeholder: "Veuillez entrer les prénoms", class: 'form-control' %>
          </div>
          <div class="clear"></div>
        </div>

        <div class="formRow">
          <label><%= f.label :phone_number %></label>
          <div class="formRight">
            <%= f.text_field :phone_number, placeholder: "Veuillez entrer le numéro de téléphone fixe", class: 'form-control' %>
          </div>
          <div class="clear"></div>
        </div>

        <div class="formRow">
          <label><%= f.label :mobile_number %></label>
          <div class="formRight">
            <%= f.text_field :mobile_number, placeholder: "Veuillez entrer le numéro de téléphone mobile", class: 'form-control' %>
          </div>
          <div class="clear"></div>
        </div>

        <div class="formRow">
          <label><%= f.label :identity_card_id %></label>
          <div class="formRight">
            <%= f.text_field :identity_card_id, placeholder: "Veuillez entrer le numéro de pièce d'identité", class: 'form-control' %>
          </div>
          <div class="clear"></div>
        </div>

        <div class="formRow">
          <label><%= f.label :address %></label>
          <div class="formRight">
            <%= f.text_field :address, placeholder: "Veuillez entrer l'adresse géographique", class: 'form-control' %>
          </div>
          <div class="clear"></div>
        </div>

        <div class="formRow">
          <label><%= f.label :password %></label>
          <div class="formRight">
            <%= f.password_field :password, placeholder: "Veuillez entrer le mot de passe", autocomplete: "off", class: 'form-control' %>
            <span class="formNote">Laissez vide si vous ne voulez pas le modifier</span>
          </div>
          <div class="clear"></div>
        </div>

        <div class="formRow">
          <label><%= f.label :password_confirmation %></label>
          <div class="formRight">
            <%= f.password_field :password_confirmation, placeholder: "Veuillez confirmer le mot de passe", autocomplete: "off", class: 'form-control' %>
          </div>
          <div class="clear"></div>
        </div>

        <div class="formRow">
          <label><%= f.label :current_password %></label>
          <div class="formRight">
            <%= f.password_field :current_password, placeholder: "Veuillez confirmer le mot de passe", autocomplete: "off", class: 'form-control' %>
            <span class="formNote">Vous devez entrer votre mot de passe actuel pour appliquer les modifications</span>
          </div>
          <div class="clear"></div>
        </div>

        <div class="formRow">
          <%= recaptcha_tags %>
        </div>

        <div class="formRow">
          <%= f.submit "Valider", class: 'basic' %>
        </div>
      </div>
    <fieldset>
  <% end %>

</div>
<!-- End Main content wrapper -->
